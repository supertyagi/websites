extends base

block content
  main.main
    .signup-form
      h2.heading-secondary.ma-bt-lg Create New Account
      form.form.form--signup
        .form__group
          label.form__label(for='name') Your Name 
          input#name.form__input(type='name', placeholder='Enter Your Name', required='required')
        .form__group
          label.form__label(for='email') Email address
          input#email.form__input(type='email', placeholder='you@example.com', required='required')
        .form__group.ma-bt-md
          label.form__label(for='password') Password
          input#password.form__input(type='password', placeholder='••••••••', required='required', minlength='8')
        .form__group.ma-bt-md
          label.form__label(for='passwordConfirm') Confirm Password
          input#passwordConfirm.form__input(type='password', placeholder='••••••••', required='required', minlength='8')
        .form__group
          button.btn.btn--green Sign up
          br
        .forgot__password 
          h2 You have a account? 
          .form__group
          .form__group
          a.button.btn.btn--green(href='/login') Log in